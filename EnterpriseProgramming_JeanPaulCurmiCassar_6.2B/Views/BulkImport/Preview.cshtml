@model IEnumerable<Domain.Interfaces.IItemValidating>

@{
    ViewData["Title"] = "Preview";
}

<h2>Preview Imported Items</h2>

<p>Items parsed from JSON (not saved yet):</p>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Name/Title</th>
            <th>Details</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item is Domain.Models.Restaurant)
            {
                var r = item as Domain.Models.Restaurant;
                <tr>
                    <td>Restaurant</td>
                    <td>@r.Name</td>
                    <td>@r.OwnerEmailAddress | @r.Phone</td>
                    <td>@r.Status</td>
                </tr>
            }
            else if (item is Domain.Models.MenuItem)
            {
                var m = item as Domain.Models.MenuItem;
                <tr>
                    <td>Menu Item</td>
                    <td>@m.Title</td>
                    <td>@m.Price @m.Currency</td>
                    <td>@m.Status</td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="DownloadZip" class="btn btn-primary">Download ZIP</a>
    <a asp-action="Commit" class="btn btn-success">Upload ZIP & Commit</a>
</div>
