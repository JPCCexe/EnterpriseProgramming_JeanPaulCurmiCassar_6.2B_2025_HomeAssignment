@{
    ViewData["Title"] = "Commit";
}

<h2>Upload ZIP and Commit to Database</h2>

@if (TempData["error"] != null)
{
    <p class="text-danger">@TempData["error"]</p>
}

<p>Upload the ZIP file with your images:</p>

<form asp-action="Commit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>ZIP File:</label>
        <input type="file" name="zipFile" accept=".zip" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Commit</button>
    <a asp-action="BulkImport" class="btn btn-secondary">Back</a>
</form>
