@{
    ViewData["Title"] = "Bulk Import";
}

<h2>Bulk Import</h2>

<p>Paste your JSON data below:</p>

<form asp-action="BulkImport" method="post">
    <div class="mb-3">
        <label>JSON Data:</label>
        <textarea name="jsonData" rows="10" class="form-control" placeholder="Paste JSON here..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Import</button>
</form>

<hr class="my-4" />

<h5>Example JSON:</h5>
<pre>
[
  {
    "type": "restaurant",
    "name": "Restaurant Name",
    "description": "Description",
    "ownerEmailAddress": "owner@test.com",
    "address": "Address",
    "phone": "12345"
  },
  {
    "type": "menuItem",
    "title": "Dish Name",
    "price": 10.50,
    "currency": "EUR",
    "restaurantId": 1
  }
]
</pre>
