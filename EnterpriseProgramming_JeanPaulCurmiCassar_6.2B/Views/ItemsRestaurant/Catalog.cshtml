@model IEnumerable<Domain.Interfaces.IItemValidating>

@{
    ViewData["Title"] = "Catalog";
    bool isApprovalMode = ViewBag.IsApprovalMode == true;
    string itemType = ViewBag.ItemType as string ?? "restaurant";
}

<div class="container mt-4">
    <h2>
        @if (ViewBag.UserRole != null)
        {
            <span>@ViewBag.UserRole - </span>
        }
        @if (ViewBag.IsApprovalMode == true)
        {
            <span>Pending Approvals</span>
        }
        else
        {
            <span>Catalog</span>
        }
    </h2>

    @if (!isApprovalMode)
    {
        <div class="mb-3">
            <a asp-action="Catalog" asp-route-type="restaurant" asp-route-view="card"
               class="btn btn-primary">View Restaurants (Card)</a>
            <a asp-action="Catalog" asp-route-type="menuitem" asp-route-view="list"
               class="btn btn-secondary">View Menu Items (List)</a>
        </div>
    }

    @if (isApprovalMode)
    {
        <!-- Approval same view, but with checkboxes -->
        <form asp-action="Approve" asp-controller="ItemsRestaurant" method="post">
            <input type="hidden" name="type" value="@itemType" />

            @foreach (var item in Model)
            {
                <div class="mb-2">
                    @if (itemType == "menuitem")
                    {
                        <input type="checkbox"
                               name="menuItemIds"
                               value="@(((Domain.Models.MenuItem)item).Id)" />
                    }
                    else
                    {
                        <input type="checkbox"
                               name="restaurantIds"
                               value="@(((Domain.Models.Restaurant)item).Id)" />
                    }

                    <partial name="@item.GetCardPartial()" model="item" />
                </div>
            }

            <button type="submit" class="btn btn-success mt-3">Approve selected</button>
        </form>
    }
    else
    {
        @if (ViewBag.ViewType == "card")
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-3">
                        <partial name="@item.GetCardPartial()" model="item" />
                    </div>
                }
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <partial name="@item.GetCardPartial()" model="item" />
                }
            </div>
        }
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No items found.
        </div>
    }
</div>
