@model Domain.Models.Restaurant

<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Name" style="height: 180px; object-fit: cover;">
    }
    <div class="card-body">
        <h5 class="card-title text-primary">@Model.Name</h5>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted small">@Model.Description</p>
        }

        <p class="mb-1"><strong>Owner:</strong> @Model.OwnerEmailAddress</p>
        <p class="mb-1"><strong>Phone:</strong> @Model.Phone</p>

        @if (!string.IsNullOrEmpty(Model.Address))
        {
            <p class="mb-1"><strong>Address:</strong> @Model.Address</p>
        }

        <span class="badge bg-@(Model.Status == "Approved" ? "success" : "warning")">@Model.Status</span>
    </div>
    <div class="card-footer">
        <a asp-controller="ItemsRestaurant" asp-action="RestaurantMenu" asp-route-id="@Model.Id"
           class="btn btn-primary btn-sm w-100">View Menu Items</a>
    </div>
</div>