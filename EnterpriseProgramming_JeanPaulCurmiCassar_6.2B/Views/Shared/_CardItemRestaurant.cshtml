@model Domain.Models.Restaurant

<div class="card">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Name">
    }
    <div class="card-body">
        <h5>@Model.Name</h5>
        <p>@Model.Description</p>
        <p><strong>Owner:</strong> @Model.OwnerEmailAddress</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><span class="badge bg-success">@Model.Status</span></p>
        <a asp-controller="ItemsRestaurant" asp-action="RestaurantMenu" asp-route-id="@Model.Id"
           class="btn btn-primary">View Menu</a>
    </div>
</div>
