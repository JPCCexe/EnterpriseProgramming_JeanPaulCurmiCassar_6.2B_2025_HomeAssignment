@model Domain.Models.MenuItem

<div class="list-group-item d-flex align-items-center">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" alt="@Model.Title" style="width: 70px; height: 70px; object-fit: cover; margin-right: 15px;">
    }
    <div class="flex-grow-1">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1">@Model.Title</h5>
                <small class="text-muted">Restaurant: @(Model.Restaurant?.Name ?? "N/A")</small>
            </div>
            <div class="text-end">
                <h5 class="text-success mb-0">@Model.Price.ToString("F2") @Model.Currency</h5>
                <span class="badge bg-@(Model.Status == "Approved" ? "success" : "warning")">@Model.Status</span>
            </div>
        </div>
    </div>
</div>