@model Domain.Models.MenuItem

<div class="list-group-item d-flex">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" alt="@Model.Title" style="width: 60px; height: 60px; margin-right: 15px;">
    }
    <div>
        <h5>@Model.Title</h5>
        <p>Price: @Model.Price @Model.Currency | Status: <span class="badge bg-success">@Model.Status</span></p>
    </div>
</div>
